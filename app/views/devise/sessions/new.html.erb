<div class="login-bg">
<div class="container-fluid">
	<div class="row">
		<div class="col-md-4 col-md-offset-2">
			<div class="log-in-panel">
				<div class="panel-heading">
					<h2>Log in</h2>
				</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, input_html: {class: 'input-lg'} %>
    <%= f.input :password, required: false, input_html: {class: 'input-lg'} %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", :class=>"btn btn-lg btn-info btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>
</div>