
<div class="comment-wrapper">
    <div class="comment ">
      
      <%if post.comments.any? %>

       <%#unless post.comments.count <= 4 %>
    	 <%post.comments.last(4).each do |comment| %>
         
      
        
         <div class="comment-name ">
    <div class="name"><%=link_to "#{post.user.username}", profile_path(post.user.username)%></div>
    		   
    		 </div>
          
         <div class="content"> 
            <%=comment.content %>
           
            <%if (current_user === comment.user)%>
              <span><%=link_to "", post_comment_path(post,comment), :method=> :delete, :class=> "comment-delete-btn glyphicon glyphicon-remove pull-right comment_delete_#{comment.id}"%>
              </span>
            <%end%>
        </div>
        <%end%>
      <%end%>
    <%#end%>

    

    

  </div>
</div>


   
 


    
