

<div class="row posts-wrapper">
	<div class="post">
		<div class="post-head">
			<div class="name">UserName</div>
		</div>
		<div class="image center-block">
	<%=image_tag @post.image.url, width: '640x', class: 'img-responsive'%>
		<p class="caption text-center"><%=@post.caption %>

	</p>
	</div>
</div>




<div class="form-wrapper">
<%=simple_form_for @post, html: { class: 'form-horizontal', multipart: true} do |form| %>
  <div class="form-group">
  <%=form.input :image %>
  </div>
  <div class="form-group text-center">
  <%=form.input :caption %>
</div>
<div class="form-group text-center">
  <%=form.button :submit, class: 'btn-success' %>
  </div>
<%end%>

</div>
<%=link_to "Delete", post_path(@post), :method => :delete, data: {confirm: "Are you sure you want to delete this post?"}, class: 'delete-btn' %> |
		<%=link_to "Cancel", posts_path, class: 'cancel-btn' %>
</div>