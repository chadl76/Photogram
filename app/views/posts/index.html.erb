
 <div class="row posts-wrapper">
<% @posts.each do |post| %>

  	<div class="post">
  	<div class="post-head">
  		<div class="name"><%=post.user.username%></div>
  	</div>
  		<div class="image center-block">
    	  <%= link_to (image_tag post.image.url(:medium), class: 'img-responsive'), post_path(post)%>
    	</div>
    	<p class="caption">
    	 <%= post.caption %>
    	</p>

    <div class="comment-wrapper">
    	<div class="comment-form">
    	
    			<%=form_for [post, post.comments.new] do |f| %>
    				<div class="comment-text-field">
    					
    			     <%=f.text_field :content, placeholder: "Add a comment...", :class=>"comment-field-input" %>
    			     	
    			     <span>
    			    <%=f.submit "Send", :class=>"btn btn-success comment-btn" %>
    				</span>
    				</div>
    		
    			<%end%>
    	
    	</div>
    </div>
  		


<%end%>
</div>